{
  "name": "agent-context",
  "version": "0.1.0",
  "description": "Build an LLM agent's working context by symlinking selected folders into a single workspace.",
  "type": "module",
  "bin": {
    "agent-context": "cli.mjs"
  },
  "license": "MIT",
  "engines": { "node": ">=18" },
  "lint-staged": {
    "*.{js,mjs,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "files": ["cli.mjs", "src/**", "README.md", "LICENSE"],
  "keywords": [
    "agent",
    "llm",
    "ai",
    "coding-agent",
    "context",
    "workspace",
    "symlink",
    "monorepo",
    "cli",
    "gemini",
    "claude",
    "cursor"
  ],
  "dependencies": {
    "chalk": "^5.6.0",
    "ink": "^6.2.2",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.1.1",
    "tsx": "^4.20.4"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/react": "^19.1.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "lint": "eslint . --ext .js,.mjs,.ts",
    "lint:fix": "eslint . --ext .js,.mjs,.ts --fix",
    "format": "prettier --write '**/*.{js,mjs,ts,json,md}'",
    "format:check": "prettier --check '**/*.{js,mjs,ts,json,md}'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  }
}
